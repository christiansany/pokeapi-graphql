{
  "name": "pokeapi-graphql",
  "version": "1.0.0",
  "description": "GraphQL Apollo Server that proxies Pok√©API with Relay specifications",
  "type": "module",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc && cp -r src/schema dist/",
    "start": "node dist/index.js",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "graphql",
    "apollo",
    "pokeapi",
    "relay"
  ],
  "author": "Christian Sany",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "4.10.0",
    "@graphql-tools/schema": "10.0.27",
    "cors": "2.8.5",
    "dotenv": "16.4.0",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-http": "1.22.4",
    "node-cache": "5.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "20.11.0",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
