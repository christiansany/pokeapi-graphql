{
  "name": "pokeapi-graphql",
  "version": "1.0.0",
  "description": "GraphQL Apollo Server that proxies Pok√©API with Relay specifications",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc && cp -r src/schema dist/",
    "start": "node dist/index.js",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["graphql", "apollo", "pokeapi", "relay"],
  "author": "Christian Sany",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "dotenv": "^16.4.0",
    "graphql": "^16.8.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
